{
    "compilerOptions": {
      "declaration": true,
      "target": "ES2020",
      "module": "ES2020",
      "strict": false,
      "strictNullChecks": false,
      "moduleResolution": "Node",
      "experimentalDecorators": true, 
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "./src/**/*",
      "./lib/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }