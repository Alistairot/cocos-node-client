{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "module": "ES2020",
    "strict": false,
    "strictNullChecks": false,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "../lib"
    ]
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}